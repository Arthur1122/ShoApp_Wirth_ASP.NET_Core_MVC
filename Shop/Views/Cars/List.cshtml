@using Shop.ViewModels
@model CarsListViewModel


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
    <h1>All Cars</h1>
    <h3>@Model.CurrCategory</h3>
    @{ 
        foreach (var car in Model.AllCars)
        {
            <h2>Model : @car.Name</h2>
            <p>Price : @car.Price.ToString("c")</p>
        }
    }
</body>
</html>
